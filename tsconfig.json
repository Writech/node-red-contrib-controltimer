{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "rootDir": "src",
        "outDir": "dist",
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": ["./src"],
    "exclude": ["./src/**/ui"]
}
