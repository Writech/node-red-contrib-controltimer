{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        //        "module": "ES2020",
        "lib": ["ES2019"],
        //        "moduleResolution": "node",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "incremental": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/render-html.ts", "src/controltimer.ejs"]
}
